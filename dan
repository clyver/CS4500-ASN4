#! /usr/bin/env python

import sys
import os
import wave

if len(sys.argv) != 5 or sys.argv[1] != '-f' or sys.argv[3] != '-f':
    print 'ERROR: incorrect command line'
else:
    if not os.path.isfile(sys.argv[2]):
        print 'Error: ' + sys.argv[2] + ' does not exist'
    elif not os.path.isfile(sys.argv[4]):
        print 'Error: ' + sys.argv[4] + ' does not exist'
    elif sys.argv[2][-4:] != '.wav':
        print 'Error: ' + sys.argv[2] + ' is not a supported format'
    elif sys.argv[4][-4:] != '.wav':
	    print 'Error: ' + sys.argv[4] + ' is not a supported format'
    else:
        try:
    		wave1 = wave.open(sys.argv[2], 'r')
    	except:
    		print sys.argv[2] + "does not meet .wav requirement"
    	try:
		    wave2 = wave.open(sys.argv[4], 'r')
		except:
			print sys.argv[4] + "does not meet .wav requirement"


